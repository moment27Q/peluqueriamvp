generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String    @map("password_hash")
  role         UserRole  @default(EMPLOYEE)
  isActive     Boolean   @default(true) @map("is_active")
  lastLogin    DateTime? @map("last_login")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  employee        Employee?
  auditLogs       AuditLog[]
  servicesCreated Service[]  @relation("CreatedBy")

  @@map("users")
}

model Employee {
  id             String   @id @default(uuid())
  userId         String   @unique @map("user_id")
  firstName      String   @map("first_name")
  lastName       String   @map("last_name")
  phone          String?
  photoUrl       String?  @map("photo_url")
  commissionRate Decimal  @default(50.00) @map("commission_rate") @db.Decimal(5, 2)
  isActive       Boolean  @default(true) @map("is_active")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  services    Service[]
  withdrawals Withdrawal[]

  @@map("employees")
}

model ServiceType {
  id              String   @id @default(uuid())
  name            String
  description     String?
  defaultPrice    Decimal  @map("default_price") @db.Decimal(10, 2)
  durationMinutes Int?     @map("duration_minutes")
  isActive        Boolean  @default(true) @map("is_active")
  createdAt       DateTime @default(now()) @map("created_at")

  services Service[]

  @@map("service_types")
}

model Service {
  id               String   @id @default(uuid())
  employeeId       String   @map("employee_id")
  serviceTypeId    String?  @map("service_type_id")
  clientName       String   @map("client_name")
  clientPhone      String?  @map("client_phone")
  price            Decimal  @db.Decimal(10, 2)
  commissionRate   Decimal  @map("commission_rate") @db.Decimal(5, 2)
  commissionAmount Decimal  @map("commission_amount") @db.Decimal(10, 2)
  serviceDate      DateTime @default(now()) @map("service_date")
  notes            String?
  createdAt        DateTime @default(now()) @map("created_at")
  createdBy        String?  @map("created_by")

  employee    Employee     @relation(fields: [employeeId], references: [id], onDelete: Restrict)
  serviceType ServiceType? @relation(fields: [serviceTypeId], references: [id], onDelete: SetNull)
  creator     User?        @relation("CreatedBy", fields: [createdBy], references: [id])

  @@index([employeeId])
  @@index([serviceDate])
  @@index([createdAt])
  @@map("services")
}

model AuditLog {
  id        String   @id @default(uuid())
  userId    String?  @map("user_id")
  action    String
  tableName String?  @map("table_name")
  recordId  String?  @map("record_id")
  oldData   Json?    @map("old_data")
  newData   Json?    @map("new_data")
  ipAddress String?  @map("ip_address")
  userAgent String?  @map("user_agent")
  createdAt DateTime @default(now()) @map("created_at")

  user User? @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}

model Withdrawal {
  id                  String           @id @default(uuid())
  employeeId          String           @map("employee_id")
  operationNumber     String           @unique @map("operation_number")
  amount              Decimal          @db.Decimal(10, 2)
  status              WithdrawalStatus @default(PENDING)
  accountHolder       String           @map("account_holder")
  bankName            String           @map("bank_name")
  accountType         String           @map("account_type")
  maskedAccountNumber String           @map("masked_account_number")
  createdAt           DateTime         @default(now()) @map("created_at")
  updatedAt           DateTime         @updatedAt @map("updated_at")

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Restrict)

  @@index([employeeId])
  @@index([status])
  @@index([createdAt])
  @@map("withdrawals")
}

enum UserRole {
  ADMIN
  EMPLOYEE

  @@map("user_role")
}

enum WithdrawalStatus {
  PENDING
  APPROVED
  REJECTED
  CANCELLED

  @@map("withdrawal_status")
}
